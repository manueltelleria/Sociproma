<script>

function validate_datosevaluador (form) {
  var alertstr = '';
  var invalid  = 0;
  var invalid_fields = new Array();
  var chkaplica = form.elements['chkaplica'].checked;
  var ncedulasup = form.elements['ncedulasup'].value;

  if (!chkaplica){

// ncedulasup: standard text, hidden, password, or textarea box
    if (ncedulasup == null || ! ncedulasup.match(/^-?\s*[0-9]+\.?[0-9]*$|^-?\s*\.[0-9]+$/)) {
      alertstr += '- Indique un valor válido para el campo "Cedula del Supervisor"\n';
      invalid++;
      invalid_fields.push('ncedulasup');
    }
    form.chkaplica.value = '';
  }
  else{
    if (ncedulasup && ncedulasup != null) {
      alertstr += '- Si se indico no aplica en Supervisor no debe indicar ningún número de Cédula\n';
      invalid++;
      invalid_fields.push('ncedulasup');
    }
    form.chkaplica.value = '1';
  }
// ncedulaevaluador: standard text, hidden, password, or textarea box
  var ncedulaevaluador = form.elements['ncedulaevaluador'].value;
  if (ncedulaevaluador == null || ! ncedulaevaluador.match(/^-?\s*[0-9]+\.?[0-9]*$|^-?\s*\.[0-9]+$/)) {
    alertstr += '- Indique un valor válido para el campo "Cedula del Evaluador"\n';
    invalid++;
    invalid_fields.push('ncedulaevaluador');
  }
  if (invalid > 0 || alertstr != '') {
    if (! invalid) invalid = 'The following';   // catch for programmer error
    alert(''+invalid+' error(es) fueron encontrados al aceptar la información:'+'\n\n'+alertstr+'\n'+'- Por favor corrija los campos y trate de nuevo');
    return false;
  }

  return true;  // all checked ok
}

function buscaNombre(nombre) {
  var forma = document.datosevaluador;
  var campo = eval('forma.'+nombre);
  var chkaplica = forma.chkaplica.checked;
  var ncedulasup = forma.elements['ncedulasup'].value;
  var ncedulaevaluador = forma.elements['ncedulaevaluador'].value;

  var texto = campo.value;

  var url = '[% ruta_busca %]';
  var funcion;

  if ( nombre == "ncedulasup" ){
    funcion = eval('llenarNombreSup');
  }
  else{
    funcion = eval('llenarNombreEval');
  }

  if (texto) {
    var pars = "ncedula="+texto;
    var myAjax = new Ajax.Request( url, { method: 'post', parameters: pars , onComplete: funcion } );
  }
  else{
    if ( nombre == "ncedulasup" ){
      if (!chkaplica){

// ncedulasup: standard text, hidden, password, or textarea box
        if (ncedulasup == null || ! ncedulasup.match(/^-?\s*[0-9]+\.?[0-9]*$|^-?\s*\.[0-9]+$/)) {
          alert ( '- Indique un valor válido para el campo "Cedula del Supervisor"\n' );
          return false;
        }
      }
    }
    else{
      if (ncedulaevaluador == null || ! ncedulaevaluador.match(/^-?\s*[0-9]+\.?[0-9]*$|^-?\s*\.[0-9]+$/)) {
        alert ('- Indique un valor válido para el campo "Cedula del Evaluador"\n');
        return false;
      }
    }
  }

  if (chkaplica){
    forma.ncedulasup.value = '';
    document.getElementById('nombresup').innerHTML = '';
    document.getElementById('cargosup').innerHTML = '';
  }
}

function llenarNombreSup(originalRequest) {
  var respuesta = originalRequest.responseText;
  var forma     = document.datosevaluador;

  if ( respuesta != 'undef' ){
    var datos = respuesta.split("|");
    if ( respuesta == "error" ){
      datos[0] = "Cédula no existe";
      datos[1] = '&nbsp;';
      forma.ncedulasup.value = '';
    }

    document.getElementById('nombresup').innerHTML = datos[0];
    document.getElementById('cargosup').innerHTML = datos[1];
  }
}

function llenarNombreEval(originalRequest) {
  var respuesta = originalRequest.responseText;
  var forma     = document.datosevaluador;

  if ( respuesta != 'undef' ){
    var datos = respuesta.split("|");
    if ( respuesta == "error" ){
      datos[0] = "Cédula no existe";
      datos[1] = '';
      forma.ncedulaevaluador.value = '';
    }
    document.getElementById('nombreeval').innerHTML = datos[0];
    document.getElementById('cargoeval').innerHTML = datos[1];
  }
}

function limpia(){
  var forma = document.datosevaluador;
  var btn   = forma.chkaplica;

  forma.ncedulasup.value = '';
  document.getElementById('nombresup').innerHTML = '';
  document.getElementById('cargosup').innerHTML = '';

  if ( btn.checked  == true ){
    forma.ncedulasup.disabled = true;
  }
  else{
    forma.ncedulasup.disabled = false;
  }

}
</script>

